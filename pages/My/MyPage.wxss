/* pages/My/MyPage.wxss */

.my-top{
  width:100%;height:520rpx;position:relative;
}

.my-top .pink-bg{
  width:100%;position:absolute;
}

.my-top .top-main{
  position:absolute;width:90%;height:90%;margin-left:5%;margin-top:8%;border-radius:15rpx;box-shadow:0px 0px 15px lightgray;background:white;
}

.my-top .top-main .main-one{
  width:90%;height:40%;margin-left:5%;
}

.my-top .top-main .main-one .one-head{
  height:100%;width:25%;float:left;
}

.my-top .top-main .main-one .one-head .head-view{
  margin-top:50rpx;width:100rpx;height:100rpx;
  border-radius:100rpx;overflow:hidden;
}

.my-top .top-main .main-one .one-head .head-view image{ 
  width:100%;height:100%;
}

.my-top .top-main .main-one .one-title{
  height:100%;width:70%;float:left;margin-left:4%;
}

.my-top .top-main .main-one .one-title .title1{
  display:block;width:100%;margin-top:80rpx;font-size:27rpx;font-family: PingFang-SC-Bold;font-weight: Bold;color:rgba(51, 51, 51, 1);
}

.my-top .top-main .main-one .one-title .title2{
  display:block;width:100%;font-size:25rpx;margin-top:10rpx;font-family: PingFang-SC-Bold;font-weight: Bold;
}

.my-top .top-main .main-second{
  width:90%;height:31%;padding-left:5%;margin-top:2%;
}

.my-top .top-main .main-second .second-left{
  width:25%;height:100%;float:left;
}

.my-top .top-main .main-second .second-left .left-image{
  height:80%;width:100%;overflow:hidden;
}

.my-top .top-main .main-second .second-left .left-image image{
  margin-top:20rpx;
}

.my-top .top-main .main-second .second-left .left-text{
  height:20%;width:100%;
}

.my-top .top-main .main-second .second-left .left-text text{
  font-size:24rpx;color:#444444;font-weight:Medium;font-family:PingFang-SC-Medium;
}

.my-top .top-main .main-bottom{
  height:25%;width:100%;margin-top:20rpx;
}


.my-top .top-main .main-bottom .bottom-text{
  color:gray;font-size:22rpx;
}


.my-top .top-main .main-bottom .bottom-image{
  width:8rpx;margin-left:15rpx;
}

.my-td{
  display:flex;align-items:center;width:90%;height:130rpx;margin-left:5%;
}

.my-td image{
  width:15rpx;margin-left: auto;
}

.my-td text{
  font-size:28rpx;color:#505050;font-weight:Bold;font-family:PingFang-SC-Bold;
} 
